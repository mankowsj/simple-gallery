.gallery {
  padding: 16px;
  display: grid;
  grid-template-columns: 33% 33% 33%;
  grid-gap: 16px;
  margin-bottom: -68px;

  .grid-item {
    /* z-index: 1; */
    height: 200px;

    &:nth-child(3n + 1) {
      transform-origin: left;
    }

    &:nth-child(3n) {
      transform-origin: right;
    }
  }
}
