.image-details {
  $padding-val: 12px;
  $font-size: 20px;

  background: rgba(0, 0, 0, 0.7);
  border-radius: 10px;
  color: white;
  font-size: $font-size;

  table {
    font-size: $font-size;
    width: 100%;
    color: inherit;
    padding: $padding-val;
  }

  .remove {
    margin: $padding-val;
  }

  .filename {
    display: inline-block;
    vertical-align: middle;
  }

  .filename-input {
    height: 100%;
    font-size: $font-size;
    max-width: 160px;
  }
}
