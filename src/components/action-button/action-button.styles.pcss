@import '../../global-styles/mixins/animations.pcss';

.action-button {
  cursor: pointer;
  padding: 5px 16px;
  color: white;
  border-radius: 4px;
  transform: scale(1);
  display: inline-block;
  position: relative;
  @include cubic(transform);
  label {
    cursor: pointer;
  }

  &:hover {
    transform: scale(1.5);
    z-index: 1;
  }
}
