@import '../../global-styles/mixins/animations.pcss';

.action-button {
  cursor: pointer;
  padding: 5px 16px;
  color: white;
  border-radius: 4px;
  transform: perspective(50px) translateZ(0);
  display: inline-block;
  @include cubic(all);
  &:hover {
    transform: perspective(50px) translateZ(5px);
  }
}
