@import '../../global-styles/mixins/animations.pcss';

.switch {
  display: inline-block;
  vertical-align: middle;
  cursor: pointer;

  label {
    display: inline-block;
    z-index: 1;
    position: relative;
    /* @include cubic(transform); */
    transform: perspective(50px);
    cursor: pointer;
  }

  .switch-button {
    position: relative;
    display: inline-block;
    border: 1px solid;
    border-color: inherit;
    border-right: 0;
    padding: 2px 16px;
    color: inherit;
    overflow: hidden;
    @include cubic(background, 1000ms);

    &:hover:after {
      @include cubic(background);
      opacity: 0.3;
    }

    &:after {
      content: '';
      position: absolute;
      height: 100%;
      width: 100%;
      @include cubic(opacity, 1000ms);
      /* background: linear-gradient(180deg, rgba(235, 179, 90, 1) 0%, rgba(223, 70, 96, 1) 100%); */
      opacity: 0;
      left: 0;
      top: 0;
      z-index: 0;
    }

    &:first-child {
      border-top-left-radius: 6px;
      border-bottom-left-radius: 6px;
    }

    &:last-child {
      border-right: 1px solid;
      border-color: inherit;
      /* border-color: rgba(235, 179, 90, 1); */
      border-top-right-radius: 6px;
      border-bottom-right-radius: 6px;
    }

    &.on {
      color: white;
      &:after {
        opacity: 1;
      }
    }
  }
}
