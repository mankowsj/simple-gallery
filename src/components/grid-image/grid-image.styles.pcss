.grid-image {
  text-align: center;
  position: relative;

  img {
    cursor: pointer;
    transition: ease-in-out 300ms transform, ease-in-out 300ms box-shadow;
    display: inline-block;
    vertical-align: middle;
    max-width: 100%;
    max-height: 100%;
    transform-origin: inherit;
  }

  .zoom-in {
    z-index: 1;
    transform: perspective(100px) translateZ(10px);
  }
}
